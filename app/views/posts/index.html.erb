<h1>HERE ARE MY POSTS</h1>

<div class="container">
  <div class="details">
    <div class="user-card">
      <img src="<%= @user.photo %>">
      <div class="user-card-plate">
        <%= @user.name %>
        <p>Number of posts: <%= @user.posts_counter %></p>
      </div>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="post-card">
      <div class="post-number">
        <h2><%= post.title %></h2>
      </div>
      <div class="post">
        <p><%= post.text %></p>
      </div>
      <div class="comment">
      <p>Number of comments: <%= post.comments_counter %></p>
      <p>Number of likes: <%= post.likes_counter %></p>
      </div>
      <div class="my-comments">
      <% @comments.each do |comment| %>
        <div><%=@user.name %> <%=@post.comment %></div>
        <%end%>
      </div>
    </div>
  <% end %>
</div>


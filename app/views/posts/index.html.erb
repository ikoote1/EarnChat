<h1>HERE ARE MY POSTS</h1>

<div class="container">
  <div class="details">
    <div class="user-card">
      <img src="<%= @user.photo %>">
      <div class="user-card-plate">
        <%= @user.name %>
        <p> <%= link_to 'New Post', new_user_post_path(@user), class: 'btn btn-primary' %> Number of posts: <%= @user.posts_counter %></p>
      </div>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="post-card">
      <div class="post-number">
        <h2><%= link_to post.title, user_post_path(user_id: @user.id, id: post.id) %></h2>
      </div>
      <div class="post">
        <p><%= post.text %></p>
      </div>
      <div class="comment">
        <p>Number of comments: <%= post.comments_counter %></p>
        <p>Number of likes: <%= post.likes_counter %></p>
        <% if can? :destroy, @post %>
        <%= link_to 'Delete', user_post_path(@users, @post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-danger' %>
      <% end %>
      </div>
      <div class="my-comments">
        <% post.comments.each do |comment| %>
          <div><%= post.user.name %> <%= comment.text %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


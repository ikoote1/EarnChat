<h1>POST DETAILS</h1>
<div class="post-card">
  <div class="my-post">
    <h2><%= @post.title %></h2>
    <div class="comment">
      <p>Number of comments: <%= @post.comments_counter %></p>
      <p>Number of likes: <%= @post.likes_counter %></p>
      <%= link_to "Like", user_post_likes_path(@user, @post), method: :post %>
    </div>
  </div>
  <div class="post">
    <p><%= @post.text %></p>
  </div>
  <div class="my-comments">
    <% @post.comments.each do |comment| %>
      <div><%= comment.user.name %> <%= comment.text %></div>
    <% end %>
  </div>
</div>

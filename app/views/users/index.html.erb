<h1>LIST OF USERS</h1>
<div class = "container">
<% @users.each do |user| %>
    <div class = "user-card">
    <img src="<%= user.photo %>">
    <div class = "user-card-plate">
    <%= link_to user.name, user_path(user) %>
    <p>Number of posts: <%= user.posts_counter %></p>
    </div>
    </div>
<% end %>
</div>